<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/message"
    android:gravity="center|center_vertical|center_horizontal"
    android:foregroundGravity="center|fill_horizontal|center_horizontal"
    android:padding="20dp">
<LinearLayout
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/check_bd_servers"
        android:id="@+id/textView5"
        android:textColor="#fff"
        android:textSize="19sp"
        android:layout_gravity="center"
        android:layout_weight="4"
        android:drawable="@drawable/message"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/ic_add_circle_outline_white_48dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/ip_img_text"
            android:id="@+id/textView9"
            android:textColor="#fff"
            android:textSize="19sp"
            android:layout_marginTop="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:background="@drawable/img_ip_server"
            android:layout_marginTop="10dp"
            android:layout_gravity="center" />
    </LinearLayout>
</LinearLayout>