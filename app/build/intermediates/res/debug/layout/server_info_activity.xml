<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/action_fon">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/menu_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/ic_list_white_18dp" />

            <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="title"
                    style="@style/TextTitle"
                    android:layout_weight="8"
               />

            <ImageButton
                android:id="@+id/show_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:background="@drawable/ic_swap_vert_white_48dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="3dp"/>


            <ImageButton
            android:id="@+id/update_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/ic_autorenew_white_48dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="4dp" />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35sp"
            android:paddingLeft="5dp" >

                <Button
                    android:id="@+id/nav_home_but"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/text_servers"
                    style="@style/TabFalse"/>

                    <Button
                        android:id="@+id/nav_servers_but"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/text_players"
                        style="@style/TabFalse"/>

                    <Button
                        android:id="@+id/nav_players_but"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/text_info"
                        style="@style/TabFalse"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/si_two"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="0dp"
            android:paddingBottom="5dp">

            <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    >

                    <TableRow
                        android:id="@+id/tableRow2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp" >

                        <TextView
                            android:id="@+id/text_rank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/server_name"
                            android:textColor="#fff"
                            style="@style/TextField"/>

                        <TextView
                            android:id="@+id/text_info_srv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            style="@style/TextField"
                            android:ellipsize="middle"
                            android:singleLine="true" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp" >

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/game_name"
                            android:textColor="#fff"
                            style="@style/TextField"/>

                        <TextView
                            android:id="@+id/text_info_srv_game"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:textColor="#fff"
                            style="@style/TextField"/>
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp" >

                         <TextView
                             android:id="@+id/tete"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="@string/adress"
                             android:textColor="#fff"
                             style="@style/TextField"/>
                        <TextView
                            android:id="@+id/text_info_srv_addr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:textColor="#fff"
                            style="@style/TextField"/>
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                         <TextView
                             android:id="@+id/textView7"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="@string/tags"
                             android:textColor="#fff"
                             style="@style/TextField"/>

                        <TextView
                            android:id="@+id/text_info_srv_tags"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:textColor="#fff"
                            style="@style/TextField"/>
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp" >

                         <TextView
                             android:id="@+id/textView8"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="@string/map_name"
                             android:textColor="#fff"
                             style="@style/TextField"/>
                        <TextView
                            android:id="@+id/text_info_srv_map"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:textColor="#fff"
                            style="@style/TextField"/>
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                         <TextView
                             android:id="@+id/textView10"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="@string/players"
                             android:textColor="#fff"
                             style="@style/TextField"/>

                        <TextView
                            android:id="@+id/text_info_srv_playerf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:textColor="#fff"
                            style="@style/TextField"/>
                    </TableRow>
                </TableLayout>
        </LinearLayout>

    </LinearLayout>


        <LinearLayout
                android:id="@+id/si_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="2dp"
                android:paddingLeft="6dp"
                android:paddingRight="11dp" >

                <TextView
                    android:id="@+id/text_player_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="@string/player"
                    style="@style/TextViewBoldStr"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/text_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/score"
                    style="@style/TextViewBoldStr"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0"
                    android:text="@string/time"
                    style="@style/TextViewBoldStr"
                    android:textSize="17sp" />

            </LinearLayout>

        <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragmentContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="4dp" />

        <ListView
        android:id="@+id/players_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_weight="10"
        android:background="#fff" >

    </ListView>

    </LinearLayout>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_id"
        android:layout_gravity="center">
    </com.google.android.gms.ads.AdView>

</LinearLayout>
